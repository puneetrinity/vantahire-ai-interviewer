{
  "name": "vantahire-api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:studio": "prisma studio",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:db": "vitest run --config vitest.db.config.ts",
    "test:db:setup": "npm run db:migrate:deploy && npm run db:seed",
    "test:migration": "MIGRATION_VERIFY=1 vitest run tests/migration/"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.7.0",
    "@hono/node-server": "^1.19.8",
    "@hono/node-ws": "^1.3.0",
    "@prisma/client": "^6.1.0",
    "arctic": "^2.2.2",
    "groq-sdk": "^0.8.0",
    "hono": "^4.11.4",
    "ioredis": "^5.4.1",
    "nanoid": "^5.0.8",
    "node-cron": "^3.0.3",
    "socket.io": "^4.8.1",
    "ws": "^8.18.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@supabase/supabase-js": "^2.89.0",
    "@types/node": "^22.12.0",
    "@types/node-cron": "^3.0.11",
    "@types/ws": "^8.5.13",
    "@types/supertest": "^2.0.16",
    "dotenv": "^16.4.5",
    "prisma": "^6.1.0",
    "supertest": "^6.3.4",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
