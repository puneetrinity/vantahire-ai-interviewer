# Server
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
CLIENT_URL=http://localhost:5173

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/vantahire?schema=public

# Redis
REDIS_URL=redis://localhost:6379

# Session
SESSION_SECRET=your-32-character-secret-key-here
SESSION_TTL_SECONDS=604800

# E2E test auth (non-production only)
# E2E_AUTH_TOKEN=your-e2e-shared-secret

# Interview Session (candidate access)
INTERVIEW_SESSION_TTL_HOURS=72

# OAuth - Google (https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth - LinkedIn (https://www.linkedin.com/developers/apps)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# AI - Groq (https://console.groq.com/keys)
GROQ_API_KEY=your-groq-api-key

# Voice - Deepgram (https://console.deepgram.com/)
DEEPGRAM_API_KEY=your-deepgram-api-key

# Voice - Cartesia (optional, for low-latency TTS)
# CARTESIA_API_KEY=your-cartesia-api-key

# TTS Provider: 'deepgram' (default) or 'cartesia'
TTS_PROVIDER=deepgram

# Google Cloud Storage (optional, for video recordings)
# GCS_BUCKET=your-bucket-name
# GCS_PROJECT_ID=your-project-id
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Brevo Email (optional, https://app.brevo.com/settings/keys/api)
# BREVO_API_KEY=your-brevo-api-key
# BREVO_SENDER_EMAIL=noreply@yourdomain.com
# BREVO_SENDER_NAME=VantaHire
# BREVO_WEBHOOK_SECRET=your-webhook-secret

# WhatsApp Cloud API (optional, https://developers.facebook.com/apps)
# WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
# WHATSAPP_ACCESS_TOKEN=your-access-token
# WHATSAPP_VERIFY_TOKEN=your-verify-token
# WHATSAPP_APP_SECRET=your-app-secret

# File limits
MAX_FILE_SIZE_MB=10
